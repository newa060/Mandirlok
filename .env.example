# ======================================
# Mandirlok — Environment Variables
# ======================================
# Copy this file to .env.local and fill in the values.

# ── Database ──
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/mandirlok?retryWrites=true&w=majority

# ── JWT ──
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ── App URL ──
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ── SMTP / Email ──
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-gmail@gmail.com
# For Gmail: use an App Password, NOT your real Gmail password
# Generate at: https://myaccount.google.com/apppasswords
SMTP_PASS=your_gmail_app_password
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your_gmail_app_password

# ── Razorpay ──
RAZORPAY_KEY_ID=rzp_test_XXXXXXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ── Twilio WhatsApp ──
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# ── Admin ──
# ADMIN_EMAILS is a comma-separated list of emails that will be treated as admin on OTP login
ADMIN_EMAILS=admin@mandirlok.com

# ADMIN_PASSWORD_HASH is used for the /admin/login page with email+password login
# Generate with: node -e "const b = require('bcryptjs'); b.hash('yourpassword', 10).then(console.log)"
ADMIN_PASSWORD_HASH=$2a$10$CHANGE_THIS_HASH_TO_YOUR_HASHED_PASSWORD

# ── Optional ──
# Node environment (development / production)
NODE_ENV=development
